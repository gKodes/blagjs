{
  "name": "@blag/puppeteer-chrome",
  "version": "0.0.0",
  "description": "Puppeteer Chrome Wraper to launch and manage a chrome instance",
  "author": "Kamalakar Gadireddy <Kamalakar.Gadireddy@marriott.com>",
  "homepage": "https://github.com/gKodes/blagjs/blob/master/packages/puppeteer-chrome/README.md",
  "license": "MIT",
  "main": "index.js",
  "exports": {
    ".": {
      "require": "./",
      "import": "./es/"
    }
  },
  "bin": {
    "browser-install": "install.js"
  },
  "type": "module",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gKodes/blagjs.git"
  },
  "scripts": {
    "test": "jest --color",
    "build": "babelc es",
    "prepare": "cp package.json dist"
  },
  "bugs": {
    "url": "https://github.com/gKodes/blagjs/issues"
  },
  "dependencies": {
    "cosmiconfig": "^6.0.0",
    "debounce": "^1.2.0",
    "multimatch": "^4.0.0",
    "progress": "^2.0.3",
    "puppeteer-core": "^3.1.0",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@blag/babel": "file:../babel",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "node_modules/@blag/babel/node_modules"
    ],
    "coverageReporters": [
      "text",
      "json",
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "@blag/babel/jest"
    },
    "testEnvironment": "node",
    "verbose": true,
    "moduleNameMapper": {
      "\\$utils/(.*)": "<rootDir>/es/utils/$1",
      "\\$dialect/(.*)": "<rootDir>/es/dialect/$1",
      "\\$typeOf/(.*)": "<rootDir>/typeOf/$1"
    }
  }
}
